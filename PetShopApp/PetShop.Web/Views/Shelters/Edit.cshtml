@model PetShop.Domain.DTO.ShelterDTO

@{
    ViewData["Title"] = "Edit Shelter";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">

    <h1 class="text-center mb-4">Edit Shelter</h1>

    <div class="card shadow-sm">
        <div class="card-header bg-warning text-dark">
            <h4 class="mb-0">Update Shelter Details</h4>
        </div>
        <div class="card-body">
            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                <div class="mb-3">
                    <label asp-for="City" class="form-label fw-bold">City</label>
                    <input asp-for="City" class="form-control" />
                    <span asp-validation-for="City" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Name" class="form-label fw-bold">Shelter Name</label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Address" class="form-label fw-bold">Address</label>
                    <input asp-for="Address" class="form-control" />
                    <span asp-validation-for="Address" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Capacity" class="form-label fw-bold">Capacity</label>
                    <input asp-for="Capacity" class="form-control" />
                    <span asp-validation-for="Capacity" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="AvailableSpaces" class="form-label fw-bold">Available Spaces</label>
                    <input asp-for="AvailableSpaces" class="form-control" />
                    <span asp-validation-for="AvailableSpaces" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="PhoneNumber" class="form-label fw-bold">Phone Number</label>
                    <input asp-for="PhoneNumber" class="form-control" />
                    <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                </div>

                <input type="hidden" asp-for="Id" />

                <div class="text-center">
                    <button type="submit" class="btn btn-success">
                        <i class="bi bi-check-circle"></i> Save
                    </button>
                    <a asp-action="Index" class="btn btn-secondary ms-2">
                        <i class="bi bi-arrow-left"></i> Back to List
                    </a>
                </div>
            </form>
        </div>
    </div>

    <div class="mt-4">
        <div class="d-flex justify-content-end align-items-center">
            <a asp-controller="Pets" asp-action="Create" class="btn btn-primary btn-sm">
                <i class="bi bi-plus-circle"></i> Add Pet
            </a>
        </div>
        <h3>Pets in Shelter</h3>
        @if (Model.Pets != null && Model.Pets.Any())
        {
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Name</th>
                        <th>Breed</th>
                        <th>Age</th>
                        <th>Gender</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var pet in Model.Pets)
                    {
                        <tr>
                            <td>@pet.Name</td>
                            <td>@pet.Breed</td>
                            <td>@pet.Age</td>
                            <td>@pet.Gender</td>
                            <td>
                                <a asp-controller="Pets" asp-action="Delete" asp-route-id="@pet.Id" method="get" class="btn btn-danger btn-sm">
                                        <i class="bi bi-trash"></i> Delete
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <p>No pets found in this shelter.</p>
        }
    </div>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
