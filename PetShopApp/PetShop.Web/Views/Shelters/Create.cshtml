@model PetShop.Domain.DTO.ShelterDTO

@{
    ViewData["Title"] = "Create Shelter";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="text-center mb-4">Create a New Shelter</h1>
<p class="text-center text-muted">Fill in the details to add a new shelter for our furry friends.</p>

<hr />

<div class="row justify-content-center">
    <div class="col-md-8">
        <form asp-action="Create" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-4"></div>

            <div class="card shadow-sm p-4">
                <h4 class="mb-3">Shelter Information</h4>

                <div class="form-group">
                    <label asp-for="City" class="form-label">City</label>
                    <input asp-for="City" class="form-control" placeholder="Enter city name" />
                    <span asp-validation-for="City" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Name" class="form-label">Shelter Name</label>
                    <input asp-for="Name" class="form-control" placeholder="Enter shelter name" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Address" class="form-label">Address</label>
                    <input asp-for="Address" class="form-control" placeholder="Enter address" />
                    <span asp-validation-for="Address" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Capacity" class="form-label">Capacity</label>
                    <input asp-for="Capacity" type="number" class="form-control" placeholder="Enter shelter capacity" />
                    <span asp-validation-for="Capacity" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="AvailableSpaces" class="form-label">Available Spaces</label>
                    <input asp-for="AvailableSpaces" type="number" class="form-control" placeholder="Enter available spaces" />
                    <span asp-validation-for="AvailableSpaces" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="PhoneNumber" class="form-label">Phone Number</label>
                    <input asp-for="PhoneNumber" type="tel" class="form-control" placeholder="Enter contact number" />
                    <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                </div>

                <div class="form-group text-center mt-4">
                    <input type="submit" value="Create Shelter" class="btn btn-success btn-lg" />
                </div>
            </div>
        </form>
    </div>
</div>

<div class="mt-4 text-center">
    <a asp-action="Index" class="btn btn-secondary">Back to Shelter List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
