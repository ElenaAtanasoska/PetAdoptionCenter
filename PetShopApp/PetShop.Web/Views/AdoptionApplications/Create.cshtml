@model PetShop.Domain.DTO.AdoptionApplicationDTO

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";

    var pet = ViewData["Pet"] as dynamic;
    var applicant = ViewData["Applicant"] as dynamic;
}

@if (ViewData["ErrorMessage"] != null)
{
    <div class="alert alert-danger text-center">
        @ViewData["ErrorMessage"]
    </div>
}

<h1 class="text-center text-primary">Adoption Application</h1>

<div class="container mt-4">
    <div class="row">
        <div class="col-md-4 d-flex justify-content-center align-items-start">
            <div class="card" style="overflow: hidden; width: 100%;">
                <img src="@pet.ImageURL" class="card-img-top" alt="@pet.Name Image" style="max-height: 300px; object-fit: cover;">
                <div class="card-body">
                    <h4 class="card-title text-center">@pet.Name</h4>
                    <hr />
                    <dl class="row">
                        <dt class="col-sm-6 text-muted">Breed</dt>
                        <dd class="col-sm-6">@pet.Breed</dd>

                        <dt class="col-sm-6 text-muted">Age</dt>
                        <dd class="col-sm-6">@pet.Age years</dd>

                        <dt class="col-sm-6 text-muted">Gender</dt>
                        <dd class="col-sm-6">@pet.Gender</dd>

                        <dt class="col-sm-6 text-muted">Weight</dt>
                        <dd class="col-sm-6">@pet.Weight kg</dd>

                        <dt class="col-sm-6 text-muted">Type</dt>
                        <dd class="col-sm-6">@pet.Type</dd>

                        <dt class="col-sm-6 text-muted">Price</dt>
                        <dd class="col-sm-6">$@pet.PriceForAdoption</dd>
                    </dl>
                </div>
            </div>
        </div>

        <div class="col-md-8">
            <div class="card" style="background-color: #f8f9fa; border-radius: 10px; box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1); padding: 20px;">
                <div class="card-body">
                    <h4 class="card-title text-center">Applicant Information</h4>
                    <hr />
                    <form asp-action="Create" method="post">
                        <input type="hidden" asp-for="PetId" value="@Model.PetId"  />
                        <input type="hidden" asp-for="ApplicantId" value="@Model.ApplicantId" />

                        <div class="form-group">
                            <label>Name</label>
                            <input type="text" class="form-control" value="@applicant.Name" readonly />
                        </div>
                        <div class="form-group">
                            <label>Surname</label>
                            <input type="text" class="form-control" value="@applicant.Surname" readonly />
                        </div>
                        <div class="form-group">
                            <label>Phone Number</label>
                            <input type="text" name="ApplicantPhoneNumber" class="form-control" value="@applicant.ContactPhoneNumber" />
                        </div>
                        <div class="form-group">
                            <label>Age</label>
                            <input type="text" name="ApplicantAge" class="form-control" value="@applicant.Age" readonly/>
                        </div>
                        <div class="form-group">
                            <label>Address</label>
                            <input type="text" name="ApplicantAddress" class="form-control" value="@applicant.Address" />
                        </div>
                        <div class="form-group">
                            <label>City of Residence</label>
                            <input type="text" name="ApplicantCity" class="form-control" value="@applicant.CityOfResidence" />
                        </div>
                        <div class="form-group">
                            <label>Adoption Fee</label>
                            <input type="text" name="SumOfAdoptionFee" class="form-control" value="@Model.SumOfAdoptionFee" readonly />
                        </div>
                        <div class="form-group">
                            <label>Date and time of application (in UTC)</label>
                            <input type="text" name="ApplicationDate" class="form-control" value="@Model.ApplicationDate" readonly />
                        </div>
                        <div class="text-right mt-3">
                            <button type="submit" class="btn btn-primary btn-md mx-2">Submit Application</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>

    <div class="row mt-4">
        <div class="col text-right">
            <a asp-action="Index" class="btn btn-secondary btn-md mx-2">Back to List</a>
        </div>
    </div>
</div>
