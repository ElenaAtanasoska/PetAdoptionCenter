@model PetShop.Domain.DTO.RequestPetDTO

@{
    ViewData["Title"] = "Cannot Delete Pet";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="text-center text-danger">Cannot Delete Pet</h1>

<div class="container mt-4">
    <div class="row">
        <div class="col-md-4 d-flex justify-content-center align-items-start" style="padding-top: 110px;">
            <div class="card" style="overflow: hidden; width: 100%;">
                <img src="@Model.ImageURL" class="card-img" alt="Pet Image" style="max-height: 300px; object-fit: cover;">
            </div>
        </div>

        <div class="col-md-8">
            <div class="card" style="background-color: #f8f9fa; border-radius: 10px; box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1); padding: 20px;">
                <div class="card-body">
                    <h4 class="card-title text-center text-warning">Adoption Status</h4>
                    <hr />
                    <p class="text-center">
                        Sorry, you cannot delete the pet <strong>@Model.Name</strong> because it has already been adopted.
                    </p>
                </div>
            </div>
        </div>
    </div>

    <div class="row mt-4">
        <div class="col text-right">
            <a asp-action="Index" class="btn btn-secondary">
                <i class="bi bi-arrow-left"></i> Back to List
            </a>
        </div>
    </div>
</div>
