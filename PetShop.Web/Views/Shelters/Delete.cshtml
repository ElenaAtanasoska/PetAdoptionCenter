@model PetShop.Domain.Entities.Shelter

@{
    ViewData["Title"] = "Delete Shelter";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    
    <h1 class="text-center text-danger mb-4">Delete Shelter</h1>

    <div class="alert alert-warning text-center">
        <strong>Warning!</strong> Are you sure you want to delete this shelter? This action cannot be undone.
    </div>

    <div class="card shadow-sm mb-4">
        <div class="card-header bg-danger text-white">
            <h4 class="mb-0">Shelter Details</h4>
        </div>
        <div class="card-body">
            <dl class="row mb-0">
                <dt class="col-sm-4 fw-bold">City</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.City)</dd>

                <dt class="col-sm-4 fw-bold">Name</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.Name)</dd>

                <dt class="col-sm-4 fw-bold">Address</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.Address)</dd>

                <dt class="col-sm-4 fw-bold">Capacity</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.Capacity)</dd>

                <dt class="col-sm-4 fw-bold">Available Spaces</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.AvailableSpaces)</dd>

                <dt class="col-sm-4 fw-bold">Phone Number</dt>
                <dd class="col-sm-8">@Html.DisplayFor(model => model.PhoneNumber)</dd>
            </dl>
        </div>
    </div>

    <div class="text-center">
        <form asp-action="Delete" class="d-inline">
            <input type="hidden" asp-for="Id" />
            <button type="submit" class="btn btn-danger">
                <i class="bi bi-trash"></i> Delete
            </button>
        </form>
        <a asp-action="Index" class="btn btn-secondary ms-2">
            <i class="bi bi-arrow-left"></i> Back to List
        </a>
    </div>
</div>
