@model PetShop.Domain.DTO.RequestPetDTO

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="text-center text-primary">Pet Details</h1>

<div class="container mt-4">
    <div class="row">
        
        <div class="col-md-4 d-flex justify-content-center align-items-start" style="padding-top: 110px;">
            <div class="card" style="overflow: hidden; width: 100%;">
                <img src="@Model.ImageURL" class="card-img" alt="Pet Image" style="max-height: 300px; object-fit: cover;">
            </div>
        </div>

        <div class="col-md-8">
            <div class="card" style="background-color: #f8f9fa; border-radius: 10px; box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1); padding: 20px;">
                <div class="card-body">
                    <h4 class="card-title text-center">Pet Information</h4>
                    <hr />
                    <dl class="row">
                        <dt class="col-sm-4 text-muted">Name</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Name)</dd>

                        <dt class="col-sm-4 text-muted">Weight</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Weight)</dd>

                        <dt class="col-sm-4 text-muted">Size</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Size)</dd>

                        <dt class="col-sm-4 text-muted">Age</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Age)</dd>

                        <dt class="col-sm-4 text-muted">Gender</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Gender)</dd>

                        <dt class="col-sm-4 text-muted">Breed</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Breed)</dd>

                        <dt class="col-sm-4 text-muted">About</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.About)</dd>

                        <dt class="col-sm-4 text-muted">Type</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Type)</dd>

                        <dt class="col-sm-4 text-muted">Health Information</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.HealthInformation)</dd>

                        <dt class="col-sm-4 text-muted">Price for Adoption</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.PriceForAdoption)</dd>

                        <dt class="col-sm-4 text-muted">Available for Adoption?</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.isAvailable)</dd>
                    </dl>
                </div>
            </div>
        </div>
    </div>

    <div class="row mt-4">
        <div class="col text-right">
            <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-warning btn-lg mx-2">Edit Pet</a>
            <a asp-action="Index" class="btn btn-secondary btn-lg mx-2">Back to List</a>
        </div>
    </div>
</div>
